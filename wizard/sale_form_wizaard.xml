<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="sale_form_wizard" model="ir.ui.view">
        <field name="name">sale.form.wizard</field>
        <field name="model">sale.form.wizard</field>
        <field name="arch" type="xml">
            <form string="Update SO">
                <group>
                    <field name="payment_term_id" />
                    <field name="state" />
                </group>
                <footer>
                    <button name="action_update_sale" string="update" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>